<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".chat.chat_image_manage_Activity">
    <android.support.constraint.Guideline
        android:id="@+id/top_gd"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3"
        />
    <ImageView
        android:id="@+id/chat_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#ffffff"
        app:layout_constraintTop_toTopOf="@+id/top_gd"
        app:layout_constraintBottom_toBottomOf="@+id/bottom_gd"
        android:src="@drawable/custom_item"
        />
    <android.support.constraint.Guideline
        android:id="@+id/bottom_gd"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.7"
        />
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        app:layout_constraintBottom_toBottomOf="parent">
        <TableRow>
            <ImageView
                android:id="@+id/download_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:src="@drawable/download_button"
                />

        </TableRow>
    </TableLayout>
</android.support.constraint.ConstraintLayout>