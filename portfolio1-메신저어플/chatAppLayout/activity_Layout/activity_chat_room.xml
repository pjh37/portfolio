<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".chat.ChatActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ADE4FF"
        android:orientation="vertical">
    <ListView
        android:id="@+id/chatListView"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="10"
        android:transcriptMode="alwaysScroll"
        android:divider="@android:color/white"
        android:background="#00000000"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:gravity="center"
        android:focusableInTouchMode="true">
        <Button
            android:id="@+id/fileSendBtn"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="#FCEA8F"
            android:paddingTop="9dp"
            android:drawableTop="@drawable/ic_add_black_24dp"
            android:textColor="#FCFCFC"
            android:textSize="18sp" />
        <EditText
            android:id="@+id/sendMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="메세지를 입력하세요"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#FFFFFF"
            android:inputType="textMultiLine"
            android:maxLines="4" />

        <Button
            android:id="@+id/sendBtn"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="#F7E002"
            android:paddingTop="9dp"
            android:drawableTop="@drawable/ic_send_black_24dp"
            android:textColor="#613030"
            android:textSize="18sp" />

    </LinearLayout>
        <TableLayout
            android:id="@+id/sendMenus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            >
            <TableRow>
                <ImageView
                    android:id="@+id/camera"
                    android:src="@drawable/ic_add_a_photo_black_24dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    />
                <ImageView
                    android:id="@+id/album"
                    android:src="@drawable/album"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    />
                <ImageView
                    android:id="@+id/video"
                    android:src="@drawable/video"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    />
                <ImageView
                    android:id="@+id/file"
                    android:src="@drawable/file"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:text="카메라"
                    android:textAlignment="center"
                    android:layout_weight="1"

                    />
                <TextView
                    android:text="엘범"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    />
                <TextView
                    android:text="영상"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    />
                <TextView
                    android:text="파일"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    />
            </TableRow>
        </TableLayout>
    </LinearLayout>
    <android.support.design.widget.NavigationView
        android:id="@+id/main_drawer_view"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:layout_gravity="start"

        />
</android.support.v4.widget.DrawerLayout>