<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/albumImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_album_default_img"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="default title"
        android:textStyle="bold"
        android:textColor="#221F1F"
        app:layout_constraintLeft_toRightOf="@id/albumImage"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/subTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="no subtitle"
        app:layout_constraintLeft_toRightOf="@id/albumImage"
        app:layout_constraintTop_toBottomOf="@id/Title"/>

    <TextView
        android:id="@+id/duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="unknown duration"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/subTitle"

         />
</android.support.constraint.ConstraintLayout>